@model MiniBird.DTO.SignInDTO

<div class="navbar-nav w-100 justify-content-end draw-borders">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "loginNavBarForm", @class = "form-inline" }))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.Login.EmailOrUsername, new { @class = "form-control mr-sm-2", placeholder = "Usuario o correo electrónico" })
        @Html.ValidationMessageFor(m => m.Login.EmailOrUsername, null, new { @class = "badge badge-danger" })
        @Html.PasswordFor(m => m.Login.Password, new { @class = "form-control mr-sm-2", placeholder = "Contraseña" })
        @Html.ValidationMessageFor(m => m.Login.Password, null, new { @class = "badge badge-danger" })
        <div class="form-check mr-sm-2">
            <div class="custom-control custom-checkbox">
                @Html.CheckBoxFor(m => m.Login.RememberMe, new { @class = "custom-control-input" })
                <label class="custom-control-label rememberMeLabel" for="Login_RememberMe">Recordarme</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar sesión</button>               
    }
</div>