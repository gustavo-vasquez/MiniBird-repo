@model Domain_Layer.DTO.InteractButtonsDTO

<button class="leave-comment text-muted" title="Responder"><i class="far fa-comment"></i><span> @Model.ReplysCount</span></button>

@if (Model.IReposted)
{
    <button class="repost reposted" title="Deshacer repost"><i class="fas fa-retweet"></i> @Model.RepostsCount</button>
}
else
{
    <button class="repost text-muted" title="Repostear"><i class="fas fa-retweet"></i> @Model.RepostsCount</button>
}

@if(Model.ILiked)
{
    <button class="like liked" title="Deshacer me gusta"><i class="fas fa-heart"></i> @Model.LikesCount</button>
}
else
{
    <button class="like text-muted" title="Me gusta"><i class="far fa-heart"></i> @Model.LikesCount</button>
}