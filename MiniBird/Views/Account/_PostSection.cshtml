@using Domain_Layer;
@model IEnumerable<Domain_Layer.DTO.PostSectionDTO>

@if (Model != null)
{
    foreach (var post in Model)
    {
        <div class="card mb-1">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <a class="card-link" href="#">
                            <img class="post-profile-img mr-2" src="@ActiveSession.GetProfileAvatar()" alt="profile_image" />
                            <span class="card-title"><b>@ActiveSession.GetNickName()</b></span>
                            <span class="card-subtitle mb-2 text-muted">@ActiveSession.GetUserName()</span>
                        </a>
                        <div class="dropdown post-actions-menu">
                            <a id="menuLinkActions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="far fa-caret-square-down ml-2"></i></a>
                            <div class="dropdown-menu" aria-labelledby="menuLinkActions">
                                <a class="dropdown-item" href="#"><i class="far fa-copy"></i> Copiar enlace del post</a>
                                <a class="dropdown-item" href="#"><i class="far fa-plus-square"></i> Insertar post</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i class="fas fa-microphone-alt-slash"></i> Silenciar a @@usuario</a>
                                <a class="dropdown-item" href="#"><i class="fas fa-lock"></i> Bloquear a @@usuario</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i class="far fa-flag"></i> Denunciar este post</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <p class="card-text">@post.Comment</p>

                        @if (post.ImageFirstSlot != null && post.ImageSecondSlot == null && post.ImageThirdSlot == null && post.ImageFourthSlot == null)
                        {
                            <div class="card post-images one-thumbnail">
                                <img class="card-img" src="@post.ImageFirstSlot" alt="posted_image">
                            </div>
                        }
                        else if (post.ImageFirstSlot != null && post.ImageSecondSlot != null && post.ImageThirdSlot == null && post.ImageFourthSlot == null)
                        {
                            <div class="card post-images two-thumbnails">
                                <div class="row no-gutters">
                                    <div class="col">
                                        <img class="card-img" src="@post.ImageFirstSlot" alt="posted_image">
                                    </div>
                                    <div class="col">
                                        <img class="card-img" src="@post.ImageSecondSlot" alt="posted_image" />
                                    </div>
                                </div>
                            </div>
                        }
                        else if (post.ImageFirstSlot != null && post.ImageSecondSlot != null && post.ImageThirdSlot != null && post.ImageFourthSlot == null)
                        {
                            <div class="card post-images three-thumbnails">
                                <div class="row no-gutters">
                                    <div class="col-md-8">
                                        <img class="card-img" src="@post.ImageFirstSlot" alt="posted_image">
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col">
                                                <img class="card-img mini-thumbnail" src="@post.ImageSecondSlot" alt="posted_image" />
                                            </div>
                                        </div>
                                        <div class="row">                                           
                                            <div class="col">
                                                <img class="card-img mini-thumbnail" src="@post.ImageThirdSlot" alt="posted_image" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (post.ImageFirstSlot != null && post.ImageSecondSlot != null && post.ImageThirdSlot != null && post.ImageFourthSlot != null)
                        {
                            <div class="card post-images four-thumbnails">
                                <div class="row no-gutters">
                                    <div class="col-md-6">
                                        <img class="card-img" src="@post.ImageFirstSlot" alt="posted_image">
                                    </div>
                                    <div class="col-md-6">
                                        <img class="card-img" src="@post.ImageSecondSlot" alt="posted_image">
                                    </div>
                                    <div class="w-100"></div>
                                    <div class="col-md-6">
                                        <img class="card-img" src="@post.ImageThirdSlot" alt="posted_image" />
                                    </div>
                                    <div class="col-md-6">
                                        <img class="card-img" src="@post.ImageFourthSlot" alt="posted_image" />
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="row mt-4 justify-content-center">
                    <div class="col-md-5">
                        <a href="#" class="card-link"><i class="far fa-comment"></i><span> 28</span></a>
                        <a href="#" class="card-link"><i class="fas fa-retweet"></i><span> 152K</span></a>
                        <a href="#" class="card-link"><i class="far fa-heart"></i><span> 11K</span></a>
                    </div>
                    <div class="col-md-5 text-right">
                        <p class="text-muted"><i class="far fa-clock"></i> 43 min.</p>
                    </div>
                </div>
            </div>
        </div>
    }
}

<div class="card mb-1">
    <div class="card-body">
        <h4 class="card-title">Card title</h4>
        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
    </div>
</div>