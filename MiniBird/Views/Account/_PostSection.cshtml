@using Domain_Layer;
@model IEnumerable<Domain_Layer.DTO.PostSectionDTO>

@if (Model.Count() > 0)
{
    foreach (var post in Model)
    {
        <div class="card mb-1">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <a class="card-link" href="@Url.Action("ProfileScreen", "Account", new { id = post.CreatedBy })">
                            <img class="post-profile-img mr-2" src="@post.ProfileAvatar" alt="profile_image" />
                            <span class="card-title"><b>@post.NickName</b></span>
                            <span class="card-subtitle mb-2 text-muted">@post.UserName</span>
                        </a>
                        <div class="dropdown post-actions-menu">
                            <a id="menuLinkActions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="far fa-caret-square-down ml-2"></i></a>
                            <div class="dropdown-menu" aria-labelledby="menuLinkActions">
                                <a class="dropdown-item" href="#"><i class="far fa-copy"></i> Copiar enlace del post</a>
                                <a class="dropdown-item" href="#"><i class="far fa-plus-square"></i> Insertar post</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i class="fas fa-microphone-alt-slash"></i> Silenciar a @@usuario</a>
                                <a class="dropdown-item" href="#"><i class="fas fa-lock"></i> Bloquear a @@usuario</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i class="far fa-flag"></i> Denunciar este post</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <p class="card-text">@post.Comment</p>

                        @if (post.ImageFirstSlot != null && post.ImageSecondSlot == null && post.ImageThirdSlot == null && post.ImageFourthSlot == null)
                        {
                            <div class="card post-images one-thumbnail">
                                <img src="@post.ImageFirstSlot" alt="posted_image">
                            </div>
                        }
                        else if (post.ImageFirstSlot != null && post.ImageSecondSlot != null && post.ImageThirdSlot == null && post.ImageFourthSlot == null)
                        {
                            <div class="card post-images two-thumbnails">
                                <div class="row no-gutters">
                                    <div class="col tpr">
                                        <img src="@post.ImageFirstSlot" alt="posted_image">
                                    </div>
                                    <div class="col tpl">
                                        <img src="@post.ImageSecondSlot" alt="posted_image" />
                                    </div>
                                </div>
                            </div>
                        }
                        else if (post.ImageFirstSlot != null && post.ImageSecondSlot != null && post.ImageThirdSlot != null && post.ImageFourthSlot == null)
                        {
                            <div class="card post-images three-thumbnails">
                                <div class="row no-gutters">
                                    <div class="col-md-8 tpr">
                                        <img src="@post.ImageFirstSlot" alt="posted_image">
                                    </div>
                                    <div class="col-md-4 tpl">
                                        <div class="row tpb">
                                            <div class="col">
                                                <img class="mini-thumbnail" src="@post.ImageSecondSlot" alt="posted_image" />
                                            </div>
                                        </div>
                                        <div class="row">                                           
                                            <div class="col">
                                                <img class="mini-thumbnail" src="@post.ImageThirdSlot" alt="posted_image" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (post.ImageFirstSlot != null && post.ImageSecondSlot != null && post.ImageThirdSlot != null && post.ImageFourthSlot != null)
                        {
                            <div class="card post-images four-thumbnails">
                                <div class="row no-gutters">
                                    <div class="col-md-6 tpr">
                                        <img src="@post.ImageFirstSlot" alt="posted_image">
                                    </div>
                                    <div class="col-md-6 tpl">
                                        <img src="@post.ImageSecondSlot" alt="posted_image">
                                    </div>
                                    <div class="w-100 tpb"></div>
                                    <div class="col-md-6 tpr">
                                        <img src="@post.ImageThirdSlot" alt="posted_image" />
                                    </div>
                                    <div class="col-md-6 tpl">
                                        <img src="@post.ImageFourthSlot" alt="posted_image" />
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="row mt-4 justify-content-center">
                    <div class="col-md-5 interact-buttons">
                        <button class="leave-comment" title="Responder"><i class="far fa-comment"></i><span> 28</span></button>
                        <button class="repost" title="Repostear"><i class="fas fa-retweet"></i><span> 152K</span></button>
                        <button class="card-link like" title="Me gusta"><i class="far fa-heart"></i><span> 11K</span></button>
                    </div>
                    <div class="col-md-5 text-right text-muted">
                        <p class="text-lowercase"><i class="far fa-clock"></i> @post.PublicationDate.ToString("dd/MM/yyyy hh:mm tt", new System.Globalization.CultureInfo("en-US"))</p>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card mb-1">
        <div class="card-body text-center">
            <h4 class="card-title">No hay nada por aquí...</h4>                        
        </div>
    </div>
}